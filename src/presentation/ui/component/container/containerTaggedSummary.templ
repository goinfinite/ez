package componentContainer

import componentStructural "github.com/speedianet/control/src/presentation/ui/component/structural"

templ ContainerTaggedSummary(containerSummary ContainerSummary) {
	<div class="p-1.5">
		<div>
			<strong>{ containerSummary.Hostname.String() }</strong>
			<small>({ containerSummary.ContainerId.String() })</small>
		</div>
		<div class="mt-1 flex flex-row justify-normal space-x-2.5">
			@componentStructural.Tag(
				"ph-link", "", containerSummary.ImageAddress.String(), "speedia-500",
			)
			@componentStructural.Tag(
				"ph-user-circle", "", containerSummary.AccountUsername.String(), "speedia-500",
			)
			@componentStructural.Tag(
				"", containerSummary.ProfileName.String(),
				"<small>"+formatProfileSummarySmallTag(&containerSummary.ProfileBaseSpecs)+"</small>",
				"speedia-500",
			)
		</div>
	</div>
}
