package componentForm

templ IconToggle(
	uncheckedIcon, uncheckedTooltip, checkedIcon, checkedTooltip, bindValuePath string,
) {
	<label class="relative flex cursor-pointer flex-wrap items-center gap-2">
		<input
			class="checked:bg-speedia-primary checked:ring-speedia-primary checked:hover:bg-speedia-primary peer relative h-8 w-16 cursor-pointer appearance-none rounded-lg ring-2 ring-inset ring-neutral-50 ring-opacity-50 transition-colors hover:bg-neutral-50 hover:bg-opacity-20 checked:hover:bg-opacity-70 focus-visible:outline-none"
			type="checkbox"
			x-model={ bindValuePath }
		/>
		<div class="bg-control-primary group absolute flex h-8 w-8 items-center justify-center rounded-xl text-neutral-50 opacity-100 ring-2 ring-neutral-50 transition-opacity hover:overflow-visible peer-checked:opacity-0">
			<i class={ "ph-duotone " + uncheckedIcon + " text-2xl" }></i>
			if uncheckedTooltip != "" {
				<span
					role="tooltip"
					class="text-control-primary text-nowrap invisible absolute left-1/2 top-full z-10 mt-2 w-auto -translate-x-1/2 rounded bg-neutral-50 bg-opacity-80 p-2 text-center text-xs opacity-0 transition-all before:invisible before:absolute before:bottom-full before:left-1/2 before:z-10 before:-ml-2 before:mt-2 before:border-x-8 before:border-b-8 before:border-x-transparent before:border-b-neutral-50 before:border-opacity-80 before:opacity-0 before:transition-all before:content-[''] group-hover:visible group-hover:block group-hover:opacity-100 group-hover:before:visible group-hover:before:opacity-100"
				>
					{ uncheckedTooltip }
				</span>
			}
		</div>
		<div class="text-speedia-primary ring-speedia-primary group absolute left-8 flex h-8 w-8 items-center justify-center rounded-xl bg-neutral-50 opacity-0 ring-2 transition-opacity hover:overflow-visible peer-checked:opacity-100">
			<i class={ "ph-duotone " + checkedIcon + " text-2xl" }></i>
			if checkedTooltip != "" {
				<span
					role="tooltip"
					class="bg-speedia-primary before:border-b-speedia-primary text-nowrap invisible absolute left-1/2 top-full z-10 mt-2 w-auto -translate-x-1/2 rounded bg-opacity-80 p-2 text-center text-xs text-neutral-50 opacity-0 transition-all before:invisible before:absolute before:bottom-full before:left-1/2 before:z-10 before:-ml-2 before:mt-2 before:border-x-8 before:border-b-8 before:border-x-transparent before:border-opacity-80 before:opacity-0 before:transition-all before:content-[''] group-hover:visible group-hover:block group-hover:opacity-100 group-hover:before:visible group-hover:before:opacity-100"
				>
					{ checkedTooltip }
				</span>
			}
		</div>
	</label>
}
